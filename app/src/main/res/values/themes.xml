<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- Fondo -->
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
    </style>

    <style name="Widget.MySearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/backgroundSecondary</item>
        <item name="submitBackground">@color/backgroundSecondary</item>
        <item name="android:textColorHint">@color/textPopup</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />
</resources>